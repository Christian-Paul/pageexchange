<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>Page Exchange | All Books</title>
		<link href="https://fonts.googleapis.com/css?family=Roboto:700,500,400,300,100|Comfortaa" rel="stylesheet">
		<link rel='stylesheet' type='text/css' href='../public/styles/style.css'>
    	<link rel="icon" href='../public/images/pin.png'>
	</head>

	<body>

		<div class="background">
			<div class="navbar-container">
				<% include ./partials/navbar %>
			</div>

			<div class='main-container'>
				<div class="books-container">
					<div class="books-title">All Books</div>
					<div class="books">
						<% for(var i = 0; i < books.length; i++) { %>

						<div class="book">
							<img class='book-cover' src=<%- books[i].imageUrl %> >
							<div class="book-title"> <%- books[i].title %> </div>
							<% if(userInfo && userInfo.hasOwnProperty('screen_name') && books[i].tradeInfo.status === 'none' && books[i].owner !== userInfo['screen_name']) { %>
								<!-- 
									if the user is logged in and the book isn't currently being traded
									and the book doesn't belong to the current user
									show request trade button 
								-->
								<a href=<%- 'request-trade/' + books[i]._id %> class="request-trade">Request Trade</a>

							<% } %>
						</div>

						<% } %>
					</div>
				</div>
			</div>

			<footer>
				<% include ./partials/footer %>
			</footer>
		</div>

		<script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
		<script src='../public/js/navbar.js'></script>
		<script src='../public/js/script.js'></script>
	</body>
</html>